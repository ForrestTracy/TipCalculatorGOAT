<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.FoodFragment">

    <TextView
        android:id="@+id/total_bill_amount_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingTop="15.0dip"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:text="BASE BILL AMOUNT"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_marginLeft="25dp"
        tools:layout_marginRight="15dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/base_bill_field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/total_bill_amount_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp">

<!--        android:hint="@string/enter_bill_text"-->
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/base_bill_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="$0.00"
            android:inputType="numberSigned"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/service_quality_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:paddingTop="15.0dip"
        android:shadowColor="@android:color/darker_gray"
        android:shadowDx="5"
        android:shadowDy="5"
        android:shadowRadius="2"
        android:text="SERVICE QUALITY"
        android:textColor="@android:color/black"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintHorizontal_bias="0.054"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/base_bill_field"
        tools:layout_marginLeft="25dp"
        tools:layout_marginRight="15dp" />

    <LinearLayout
        android:id="@+id/food_button_wrapper"
        app:layout_constraintTop_toBottomOf="@+id/service_quality_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:paddingStart="3.0dip"
        android:paddingTop="5.0dip"
        android:paddingEnd="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/superb_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="SUPERB"
            android:layout_weight="1.0"
            android:backgroundTint="@android:color/holo_green_dark" />

        <Button
            android:id="@+id/good_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="GOOD"
            android:layout_weight="1.0"
            android:backgroundTint="@android:color/holo_green_light" />

        <Button
            android:id="@+id/fair_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="FAIR"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/poor_button"
            android:layout_width="0.0dip"
            android:layout_height="fill_parent"
            android:text="POOR"
            android:layout_weight="1.0"
            android:backgroundTint="@android:color/holo_red_light" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/food_button_wrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/calculated_total_text"
            android:text="TOTAL"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:shadowColor="@android:color/darker_gray"
            android:shadowDx="5"
            android:shadowDy="5"
            android:shadowRadius="2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15.0dip"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_marginLeft="25dp"
            tools:layout_marginRight="15dp" />
        <TextView
            android:id="@+id/calculated_total_value"
            android:text="$0.00"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:shadowColor="@android:color/darker_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="15.0dip"
            android:paddingLeft="15.0dip"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_marginLeft="25dp"
            tools:layout_marginRight="15dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>